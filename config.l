;; My tmacs config file.

;; Set some in-built variables
(set-int tab-width 4)
(set-int vsync 1)
(set-int smooth-scroll 1)
(set-int font-size 19)
(set-int draw-text-blended 1)
(set-float scroll-speed 0.035)
(set-string font "fonts/consola.ttf")


(set-string a "This is ")
(strcat a "a test")

(print a) ;; This prints out "This is a test" to the console
